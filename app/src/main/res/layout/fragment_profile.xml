<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2d6d6"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:padding="@dimen/common_padding">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/common_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivprofileimg"
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginTop="12dp"
            android:paddingTop="@dimen/common_padding"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvfirstname"
            android:hint="@string/first_name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_padding"
            app:layout_constraintStart_toEndOf="@id/ivprofileimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvusername"
            android:hint="@string/user_name"
            android:text="sussanabeautyk@gmail.com"
            android:color="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:paddingTop="@dimen/small_padding"
            app:layout_constraintStart_toEndOf="@id/ivprofileimg"
            app:layout_constraintTop_toBottomOf="@id/tvfirstname"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvcitystate"
            android:text="wwwwwwwwwwwwwwwwwwww"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/common_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvpayment"
            android:text="kcksksjdjksskajxnx"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/common_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>